<!--Navbar-->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <a class="navbar-brand" href="/">Grocery Delivery Application</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse " id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <a class="nav-link" href="/groceries">Items</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/cart">Cart</a>
      </li>
    </ul>
  </div>
</nav>

<!-- Page Content -->
<div class="container body-container">
  <div class="row">
    <div class="col-lg-3">
      <h1 class="my-4"></h1>
      <div class="list-group">
        <a href="/groceries" class="list-group-item">Continue Shopping</a>
        <a href="#" class="list-group-item">Checkout</a>

      </div>
    </div>

    <div class="col-lg-9">
      <div class="row">
        <div class="col-lg" id="cart-row">
          <h1>Your Shopping Cart</h1>
        </div>
      </div>
      <div class="row" id="item-row">
        {{#each cart}}
        <div class="card mb-3 h-400">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="{{this.unit_image}}" class="card-img" alt="">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"> {{this.unit_name}} </h5>
                <h5>{{this.unit_price}}</h5>
                <a class="card-text">
                  <small class="text-muted">
                    <a href="/cart">Delete Item</small></a>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <!-- /.row -->
    </div>
    <!-- /.col-lg-9 -->
  </div>
  <!-- /.row -->
</div>
<!-- /.container -->

<!-- Footer -->
<footer class="py-5 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white">
      Copyright &copy; Your Website 2019
    </p>
  </div>
  <!-- /.container -->
</footer>